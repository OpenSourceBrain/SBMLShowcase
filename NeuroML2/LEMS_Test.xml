<Lems>

<!-- Specify which component to run -->
<Target component="sim1"/>

<!-- Include core NeuroML2 ComponentType definitions -->
<Include file="Cells.xml"/>
<Include file="Networks.xml"/>
<Include file="Simulation.xml"/>


<Include file="Lavrentovich2008.xml"/>
<Include file="Test.net.nml"/>
        

<Simulation id="sim1" length="250s" step="0.5ms" target="Test">

    
    <Display id="d1" title="RS v" timeScale="1ms" xmin="-100" xmax="2100" ymin="-80" ymax="50">
        <Line id ="RS v" quantity="izhpop/0/RS/v" scale="1mV"  color="#0000ff" timeScale="1ms"/>
    </Display>
    <Display id="d2" title="RS u" timeScale="1ms" xmin="-100" xmax="2100" ymin="-80" ymax="80">
        <Line id ="RS u" quantity="izhpop/0/RS/u" scale="1pA"  color="#ff0000" timeScale="1ms"/>
    </Display>
    
    <Display id="sbml" title="SBML variables" timeScale="1ms" xmin="-100" xmax="2100" ymin="-.5" ymax="5">
        <Line id ="X" quantity="testpop/0/LavrentovichSBML/L2008/X" scale="1"  color="#ff0000" timeScale="1ms"/>
        <Line id ="Y" quantity="testpop/0/LavrentovichSBML/L2008/Y" scale="1"  color="#00ff00" timeScale="1ms"/>
        <Line id ="Z" quantity="testpop/0/LavrentovichSBML/L2008/Z" scale="1"  color="#0000ff" timeScale="1ms"/>
    </Display>
   

    <OutputFile id="of0" fileName="RS_v.dat">
        <OutputColumn id="v" quantity="izhpop/0/RS/v" />
        <OutputColumn id="u" quantity="izhpop/0/RS/u" />
    </OutputFile>
    
    <OutputFile id="of1" fileName="SBML.dat">
        <OutputColumn id="X" quantity="testpop/0/LavrentovichSBML/L2008/X" />
        <OutputColumn id="Y" quantity="testpop/0/LavrentovichSBML/L2008/Y" />
        <OutputColumn id="Z" quantity="testpop/0/LavrentovichSBML/L2008/Z" />
    </OutputFile>
      
</Simulation>

</Lems>
